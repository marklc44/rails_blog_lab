<div class="row">
  <div class="col-sm-12">
    <h2>Comments for: <%= @post.title %></h2>
    <p><%= @post.description %></p>
  </div>

  <h3>Comments:</h3>
  <ul class="comments-list">
      <li>
        <h4><%= @comment.title %></h4>
        <p><%= @comment.author %></p>
        <p><%= @comment.body %></p>
        <p class="text-right"><a href="/posts/<%= @post.id %>/comments/<%= @comment.id %>/edit">Edit</a></p>
      </li>
  </ul>
</div>