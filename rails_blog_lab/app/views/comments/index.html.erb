<div class="row">
  <div class="col-sm-12">
    <h2>Comments for: <%= @post.title %></h2>
    <p><%= @post.description %></p>
  </div>

  <h3>Comments:</h3>
  <ul class="comments-list">
    <% @comments.each do |comment| %>
      <li>
        <h4><%= comment.title %></h4>
        <p><%= comment.author %></p>
        <p><%= comment.body %></p>
        <%= button_to "Delete This?", post_comment_path(@post, comment), method: :delete, class: "btn btn-danger" %>
      </li>
    <% end %>
  </ul>
</div>
