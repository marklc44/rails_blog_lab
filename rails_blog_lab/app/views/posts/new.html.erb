<div class="row">
  <div class="col-sm-12">
    <h2>New Post</h2>
    <form action="/posts" method="post">
      <div class="form-group">
        <input type="text" name="post[author]" placeholder="Author">
      </div>
      <div class="form-group">
        <input type="text" name="post[title]" id="title" placeholder="Post Title">
      </div>
      <div class="form-group">
        <textarea name="post[description]" id="description" placeholder="Description"></textarea>
      </div>
      <div class="form-group">
        <label for="tagname">Add tags:</label>
        <input type="text" name="tag[new]" id="tagname" placeholder="Separate with commas">
      </div>
      <input class="btn btn-default" type="submit" value="submit">
      <%= token_tag form_authenticity_token %>
    </form>
  </div>
</div>