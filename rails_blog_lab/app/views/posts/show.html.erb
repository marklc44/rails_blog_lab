<div class="row">
  <div class="col-md-8 col-md-offset-2 post">
    <div class="post">
    <h2><%= @post.title %></h2>
      <p class="author">By: <%= @post.author %></p>

      <p class="desc"><%= @post.description %></p>
    </div>
    <h4>Tags:</h4>
    <ul class="tag-list">
      <% @post.tags.each do |tag| %>
        <li class="tag"><%= tag.name %></li>
      <% end %>
    </ul>
    <div class="spacer"></div>
    <a class="btn btn-default btn-small" href="/posts/<%= @post.id %>/edit">Edit this post</a>
    <div class="spacer"></div>
    <h4>Comments:</h4>
    <a class="btn btn-default" href="/posts/<%= @post.id %>/comments/new">Add a Comment</a>
    <div class="spacer"></div>
    <ul class="comments-list">
      <% @comments.each do |comment| %>
        <li>
          <div class="row">
            <div class="col-xs-2 text-right comment-meta">
              <p class="author"><%= comment.author %></p>
              <p><em><%= comment.updated_at.strftime("%b %d,  %y") %></em>
            </div>
            <div class="col-xs-10 body">
              <h4><a href="/posts/<%= @post.id %>/comments/<%= comment.id %>"><%= comment.title %></a></h4>
              <p><%= comment.body  %></p>
              <p class="text-right"><a href="/posts/<%= @post.id %>/comments/<%= comment.id %>/edit">Edit</a></p>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>